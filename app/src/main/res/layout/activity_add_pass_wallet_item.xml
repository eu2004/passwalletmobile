<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPassWalletItemActivity">

    <TableLayout
        android:layout_width="600dp"
        android:layout_height="800dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="350px"
                    android:layout_height="43dp"
                    android:text="Create new entry ..."/>

            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nick_name_textView"
                    android:layout_width="190px"
                    android:layout_height="43dp"
                    android:text="Nick name:"/>
                <EditText
                    android:id="@+id/nick_name_EditText"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:ems="10"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name_textView"
                    android:layout_width="190px"
                    android:layout_height="43dp"
                    android:text="Name:"/>
                <EditText
                    android:id="@+id/name_EditText"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:ems="10"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/password_textView"
                    android:layout_width="190px"
                    android:layout_height="43dp"
                    android:text="Password:"/>
                <EditText
                    android:id="@+id/password_EditText"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/site_textView"
                    android:layout_width="190px"
                    android:layout_height="43dp"
                    android:text="Site:"/>
                <EditText
                    android:id="@+id/site_EditText"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:ems="10"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/description_textView"
                    android:layout_width="190px"
                    android:layout_height="43dp"
                    android:text="Description:"/>
                <EditText
                    android:id="@+id/description_EditText"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:ems="10"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/create_passwallet_item_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Create"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>