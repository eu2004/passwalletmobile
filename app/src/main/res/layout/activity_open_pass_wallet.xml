<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ro.group305.passwalletandroidclient.OpenPassWalletActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My PassWallet 1.1" />

        <Button
            android:id="@+id/browse_passwallet_file_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select wallet"/>

    <TextView
         android:id="@+id/selected_wallet_name_label_textView"
            android:layout_width="111dp"
            android:layout_height="20dp"
            android:text="Selected wallet:"
            app:layout_constraintEnd_toStartOf="@+id/walletKey"/>

    <TextView
            android:id="@+id/selected_wallet_name_textView"
            android:layout_width="365dp"
            android:layout_height="43dp"
            android:text=""
            app:layout_constraintEnd_toStartOf="@+id/walletKey" />
    <TextView
            android:id="@+id/textView"
            android:layout_width="111dp"
            android:layout_marginTop="20dp"
            android:layout_height="20dp"
            android:text="Enter wallet key:"
            app:layout_constraintEnd_toStartOf="@+id/walletKey" />

    <EditText
        android:id="@+id/walletKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/open_passwallet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Open"/>

        <TextView
            android:id="@+id/create_new_passwallet_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:layout_marginTop="50dp"
            android:contentDescription="Creates new wallet file"
            android:text="_Create new passwallet file_" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
