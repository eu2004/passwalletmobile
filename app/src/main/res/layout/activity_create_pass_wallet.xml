<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePassWalletActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="400dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create new Pass Wallet ..." />

        <TextView
            android:id="@+id/new_wallet_name_textView"
            android:layout_width="365dp"
            android:layout_height="43dp"
            android:text=""
            app:layout_constraintEnd_toStartOf="@+id/walletKey" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="111dp"
            android:layout_marginTop="20dp"
            android:layout_height="20dp"
            android:text="Enter wallet key:"
            app:layout_constraintEnd_toStartOf="@+id/walletKey" />
        <EditText
            android:id="@+id/walletKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/create_passwallet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Create"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>