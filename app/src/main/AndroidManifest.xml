<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ro.group305.passwalletandroidclient">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.OpenPassWalletActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ManagePassWalletActivity"
            android:parentActivityName=".activity.OpenPassWalletActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activity.CreatePassWalletActivity"
            android:parentActivityName=".activity.OpenPassWalletActivity" />
        <activity android:name=".activity.EditPassWalletItemActivity" />
        <activity android:name=".activity.CreatePassWalletItemActivity" />
        <activity android:name=".activity.ViewPassWalletItemActivity"/>
    </application>

</manifest>